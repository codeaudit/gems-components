@import '../../colors'
@import '../../consts'

.kind
  margin-bottom: 30px;

.kindName
  font-size: 24px;
  font-weight: 400;
  text-transform: capitalize;

.kindContent
  margin-top: 10px;

.link
  font-weight: 400
  margin-bottom: 10px;


.panel
  box-sizing: border-box;

  padding: s-padding-big
  min-height: calc(100vh - 50px)

  border-radius: 4px
  background-color: color-white
  border: solid 1px color-grey

  @media(max-width: 660px)
    margin: 0;
