.gem-collapsable
  box-sizing: border-box;

  &-header
    box-sizing: border-box;

    display: flex;
    align-items: center;
    justify-content: space-between;

    user-select: none;
    cursor: pointer;

    &-inner
      flex-grow: 1

    &-toggle
      margin-right: 10px;

    &-shevron
      path
        fill: #1C2541




  &-content
    box-sizing: border-box;
    overflow hidden
